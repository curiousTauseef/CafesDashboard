<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="DataLayer">
		<class>com.websystique.springmvc.pojos.BranchOffer</class>
		<class>com.websystique.springmvc.pojos.Branch</class>
		<class>com.websystique.springmvc.pojos.City</class>
		<class>com.websystique.springmvc.pojos.Country</class>
		<class>com.websystique.springmvc.pojos.GuestReservation</class>
		<class>com.websystique.springmvc.pojos.Menu</class>
		<class>com.websystique.springmvc.pojos.MenuCategory</class>
		<class>com.websystique.springmvc.pojos.OffersAndEvent</class>
		<class>com.websystique.springmvc.pojos.OffersAndEventsType</class>
		<class>com.websystique.springmvc.pojos.OrderDetail</class>
		<class>com.websystique.springmvc.pojos.Order</class>
		<class>com.websystique.springmvc.pojos.Role</class>
		<class>com.websystique.springmvc.pojos.Status</class>
		<class>com.websystique.springmvc.pojos.StoreRelatedPhoto</class>
		<class>com.websystique.springmvc.pojos.Store</class>
		<class>com.websystique.springmvc.pojos.Telephone</class>
		<class>com.websystique.springmvc.pojos.UserLoginHistory</class>
		<class>com.websystique.springmvc.pojos.User</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="" />
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="500" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.idle_test_period" value="2000" />
		</properties>
	</persistence-unit>
</persistence>
